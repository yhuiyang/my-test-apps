<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/label_1st_use_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_1st_use_intro"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/label_1st_use_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/label_1st_use_instruction" />

        <TextView
            android:id="@+id/label_add_repo_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/label_add_repo_sample" />

        <TextView
            android:id="@+id/label_add_repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/label_add_repo" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_add_repo_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/btn_add_repo_sample" />

            <Button
                android:id="@+id/btn_add_repo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/btn_add_repo" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>